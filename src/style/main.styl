@import 'mixin'
@import 'theme'

#header
  overflow: hidden;
  height: 50px;
  border-box()
  inset-box-shadow(0px, -1px, 3px, #1d1d1d)
  vbg-gradient( #474747, #303030)

#header h1
  line-height: 50px;
  float: left;
  padding: 0 20px;
  font-size: 18px;
  margin: 0;
  color: #FFF;
  border-right: 1px solid #181818;
  box-shadow(1px, 0px, 1px, #525252)
  text-shadow: 0 -1px 1px black;
  font-weight: bold;

.TestInputBox
  background: #CCC
  margin: 10px 10px
  padding: 10px 20px

.GameView
  background: #CCC
  margin: 20px 10px
  padding: 10px 20px 20px 20px

.GameView td
  vertical-align: top

.GameViewName
  color: #333
  text-shadow: 0 1px -1px #fff;
  margin-bottom 10px
  font-weight bold

.PlayerView
  background: #ccf
  padding: 10px
  margin: 10px

.PlayerViewName
  color: #333
  text-shadow: 0 1px -1px #fff;
  margin-bottom 10px
  font-weight bold

.BoardView
  padding: 34px
  background: #000

.BoardViewTiles
  background url('../img/ground.png')
  width: 100%
  height: 100%
  position: relative
  left: 0
  top: 0

.EntityView
  width: 0px
  height: 0px
  background-attachment: fixed

.BoardViewTiles .EntityView
  position: absolute

.ConveyorView
  z-index: 10
  background url('../img/conveyor.png')

.CrusherView
  z-index: 80
  background url('../img/crusher.png')

.ExpressConveyorView
  z-index: 10
  background url('../img/conveyor_express.png')

.RobotView
  z-index: 50
  background url('../img/roombo.png')


.PlayerRobotView .RobotView
  display: inline-block

.CardView
  width: 55px
  height: 80px
  display: inline-block
  background: #555
  border: solid #000 2px
  color: #EEE
  margin: 10px
  padding: 3px

.CardViewPriority
  font-style: italic
  width: 100%
  text-align: right

.CardViewText
  font-weight: bold 
  width: 100%
  text-align: center
  margin-top 20px

